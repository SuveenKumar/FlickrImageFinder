<Page x:Class="FlickrImageFinder.Views.ImageSelectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlickrImageFinder.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImageSelectPage">
    <ScrollViewer  Name="slider" CanContentScroll="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <Image Source="{Binding imageModel.Img}" MouseWheel="img_MouseWheel"
            Width="800" Height="800"
            x:Name="img"/>
    </ScrollViewer>
</Page>
